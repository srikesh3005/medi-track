{
  "designSystem": {
    "name": "Project Management Dashboard",
    "version": "1.0",
    "description": "Modern project management interface with clean design and effective data visualization"
  },
  "colorPalette": {
    "primary": {
      "brand": "#4A7C59",
      "brandLight": "#6B9A5B",
      "brandDark": "#3A5E47"
    },
    "neutral": {
      "white": "#FFFFFF",
      "gray50": "#F9FAFB",
      "gray100": "#F3F4F6",
      "gray200": "#E5E7EB",
      "gray300": "#D1D5DB",
      "gray400": "#9CA3AF",
      "gray500": "#6B7280",
      "gray600": "#4B5563",
      "gray700": "#374151",
      "gray800": "#1F2937",
      "gray900": "#111827"
    },
    "semantic": {
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6"
    },
    "accent": {
      "blue": "#3B82F6",
      "purple": "#8B5CF6",
      "orange": "#F97316",
      "teal": "#14B8A6"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "Inter, -apple-system, BlinkMacSystemFont, sans-serif",
      "mono": "JetBrains Mono, Monaco, monospace"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeights": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeights": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },
  "spacing": {
    "scale": "4px base unit",
    "values": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "40px",
      "3xl": "48px",
      "4xl": "64px"
    }
  },
  "borderRadius": {
    "none": "0",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "2xl": "24px",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
  },
  "layout": {
    "structure": {
      "type": "sidebar + main content",
      "sidebar": {
        "width": "280px",
        "position": "fixed left",
        "background": "white",
        "sections": ["branding", "navigation", "secondary_nav", "footer_actions"]
      },
      "mainContent": {
        "marginLeft": "280px",
        "padding": "24px 32px",
        "background": "gray50"
      }
    },
    "grid": {
      "type": "CSS Grid",
      "columns": "repeat(auto-fit, minmax(280px, 1fr))",
      "gap": "24px"
    }
  },
  "components": {
    "sidebar": {
      "styling": {
        "background": "white",
        "borderRight": "1px solid gray200",
        "padding": "24px 0"
      },
      "sections": {
        "branding": {
          "padding": "0 24px 32px",
          "logoSize": "32px height",
          "typography": "xl semibold"
        },
        "navigation": {
          "itemHeight": "44px",
          "activeBg": "brand with opacity",
          "activeText": "brand color",
          "hoverBg": "gray100",
          "iconSize": "20px",
          "typography": "base medium"
        },
        "sectionHeaders": {
          "typography": "sm medium uppercase",
          "color": "gray500",
          "spacing": "24px top margin"
        }
      }
    },
    "cards": {
      "default": {
        "background": "white",
        "borderRadius": "lg",
        "shadow": "sm",
        "padding": "24px",
        "border": "none"
      },
      "metric": {
        "extends": "default",
        "minHeight": "140px",
        "displayFlex": "column justify-between"
      },
      "hover": {
        "shadow": "md",
        "transition": "all 0.2s ease"
      }
    },
    "buttons": {
      "primary": {
        "background": "brand",
        "color": "white",
        "padding": "12px 20px",
        "borderRadius": "md",
        "typography": "sm medium",
        "hover": "brandDark background"
      },
      "secondary": {
        "background": "white",
        "color": "gray700",
        "border": "1px solid gray300",
        "padding": "12px 20px",
        "borderRadius": "md",
        "typography": "sm medium"
      },
      "icon": {
        "size": "40px",
        "borderRadius": "full",
        "iconSize": "20px"
      }
    },
    "metrics": {
      "container": {
        "display": "grid",
        "gridTemplateColumns": "repeat(auto-fit, minmax(200px, 1fr))",
        "gap": "24px"
      },
      "metricCard": {
        "layout": "flex column",
        "header": {
          "display": "flex justify-between items-center",
          "iconContainer": {
            "size": "32px",
            "borderRadius": "md",
            "background": "gray100"
          }
        },
        "value": {
          "typography": "4xl bold",
          "color": "gray900",
          "margin": "16px 0 8px"
        },
        "label": {
          "typography": "sm medium",
          "color": "gray600"
        },
        "trend": {
          "typography": "xs medium",
          "color": "success or gray500",
          "display": "flex items-center gap-4px"
        }
      }
    },
    "charts": {
      "barChart": {
        "container": "white background, lg borderRadius",
        "bars": {
          "activeColor": "brand",
          "inactiveColor": "gray200",
          "borderRadius": "sm top only"
        },
        "labels": {
          "typography": "sm medium",
          "color": "gray600"
        }
      },
      "donutChart": {
        "strokeWidth": "thick",
        "colors": ["brand", "gray300"],
        "centerText": {
          "value": "4xl bold",
          "label": "sm medium gray600"
        }
      }
    },
    "lists": {
      "teamMember": {
        "itemHeight": "60px",
        "avatar": {
          "size": "40px",
          "borderRadius": "full"
        },
        "content": {
          "name": "base medium gray900",
          "subtitle": "sm gray600",
          "status": {
            "padding": "4px 8px",
            "borderRadius": "sm",
            "typography": "xs medium"
          }
        }
      },
      "project": {
        "itemHeight": "56px",
        "icon": {
          "size": "32px",
          "borderRadius": "md"
        },
        "content": {
          "title": "base medium gray900",
          "dueDate": "sm gray600"
        }
      }
    },
    "timer": {
      "container": {
        "background": "gradient dark",
        "borderRadius": "xl",
        "padding": "32px",
        "color": "white"
      },
      "display": {
        "typography": "3xl bold mono",
        "textAlign": "center"
      },
      "controls": {
        "buttonSize": "48px",
        "gap": "16px",
        "justifyContent": "center"
      }
    }
  },
  "dataVisualization": {
    "principles": {
      "colorUsage": "Brand color for primary data, gray scale for secondary",
      "spacing": "Consistent 24px gaps between chart elements",
      "labels": "Clear, concise, positioned for easy reading",
      "interactivity": "Subtle hover states, no overwhelming animations"
    },
    "chartTypes": {
      "barChart": {
        "use": "Comparing discrete categories over time",
        "styling": "Rounded tops, consistent spacing, branded colors"
      },
      "donutChart": {
        "use": "Part-to-whole relationships",
        "styling": "Clean center text, minimal legend, high contrast"
      },
      "progressBar": {
        "use": "Showing completion status",
        "styling": "Rounded, branded fill color, light background"
      }
    }
  },
  "stateManagement": {
    "loading": {
      "skeleton": "Gray200 background with subtle shimmer",
      "spinners": "Brand colored, minimal design"
    },
    "empty": {
      "illustration": "Light gray, simple icons",
      "text": "Gray600, helpful messaging"
    },
    "error": {
      "color": "Error red",
      "background": "Light error background",
      "actions": "Clear recovery options"
    }
  },
  "interactions": {
    "hover": {
      "cards": "Subtle shadow increase",
      "buttons": "Slight darkening of background",
      "listItems": "Light background change"
    },
    "active": {
      "navigation": "Brand background with opacity",
      "buttons": "Darker background variant"
    },
    "focus": {
      "outline": "2px brand color",
      "offset": "2px"
    },
    "transitions": {
      "duration": "150-300ms",
      "easing": "ease-out",
      "properties": ["background-color", "box-shadow", "transform"]
    }
  },
  "responsiveDesign": {
    "breakpoints": {
      "mobile": "768px",
      "tablet": "1024px",
      "desktop": "1280px"
    },
    "adaptations": {
      "mobile": {
        "sidebar": "Convert to bottom navigation or drawer",
        "cards": "Single column layout",
        "spacing": "Reduce to 16px"
      },
      "tablet": {
        "sidebar": "Maintain but reduce width",
        "cards": "Two column layout",
        "spacing": "Maintain 24px"
      }
    }
  },
  "accessibility": {
    "colorContrast": "WCAG AA compliant (4.5:1 minimum)",
    "focusManagement": {
      "visible": "Clear focus indicators",
      "logical": "Tab order follows visual hierarchy"
    },
    "semanticMarkup": {
      "headings": "Proper h1-h6 hierarchy",
      "landmarks": "Main, nav, aside regions",
      "lists": "Proper ul/ol structure"
    },
    "ariaLabels": "Descriptive labels for interactive elements"
  },
  "designTokens": {
    "naming": "semantic-based (primary, secondary, success, etc.)",
    "structure": "category-property-variant",
    "examples": {
      "color-background-primary": "#FFFFFF",
      "color-text-primary": "#111827",
      "space-component-padding": "24px",
      "border-radius-card": "12px"
    }
  }
}